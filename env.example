# Application Settings
PROJECT_NAME=Stock Analysis Service
VERSION=1.0.0
API_V1_STR=/api/v1

# Database
# For SQLite (default)
DATABASE_URL=sqlite:///./stock_analysis.db

# For PostgreSQL (uncomment and configure)
# DATABASE_URL=postgresql://user:password@localhost:5432/stock_analysis

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
YFINANCE_ENABLED=true

# ML Models
ML_MODEL_PATH=./models

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

